<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_equal"
    android:fitsSystemWindows="true">

    <ImageButton
        android:id="@+id/btnRotate"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_screen_rotation_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/darker_gray"
        android:visibility="gone"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FF5252"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1.5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/stat_notify_error"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvTopToast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-light"
        android:gravity="end|bottom"
        android:maxLines="2"
        android:text="@string/btn_0"
        android:textColor="#212121"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSecondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:text=""
        android:textColor="#9E9E9E"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_equal"
        android:padding="4dp"
        app:columnCount="6"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button android:id="@+id/buttonLeftParen" style="@style/StyleOperator.Land" android:text="@string/btn_left_bracket" app:layout_columnWeight="1" />
        <Button android:id="@+id/buttonRightParen" style="@style/StyleOperator.Land" android:text="@string/btn_right_bracket" app:layout_columnWeight="1" />
        <Button android:id="@+id/button7" style="@style/StyleNumeric.Land" android:text="@string/btn_7" app:layout_columnWeight="1" />
        <Button android:id="@+id/button8" style="@style/StyleNumeric.Land" android:text="@string/btn_8" app:layout_columnWeight="1" />
        <Button android:id="@+id/button9" style="@style/StyleNumeric.Land" android:text="@string/btn_9" app:layout_columnWeight="1" />
        <Button android:id="@+id/buttonDivide" style="@style/StyleOperator.Land" android:text="@string/btn_div" app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSqu"
            style="@style/StyleOperator.Land"
            android:text="@string/btn_sqrt"
            app:icon="@drawable/ic_sqrt"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="36sp"
            android:textColor="#00000000"
            app:iconTint="@color/text_operator"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonFac"
            style="@style/StyleOperator.Land"
            android:text="@string/btn_factorial"
            app:icon="@drawable/ic_factorial"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconSize="36sp"
            android:textColor="#00000000"
            app:iconTint="@color/text_operator"
            app:layout_columnWeight="1" />
        <Button android:id="@+id/button4" style="@style/StyleNumeric.Land" android:text="@string/btn_4" app:layout_columnWeight="1" />
        <Button android:id="@+id/button5" style="@style/StyleNumeric.Land" android:text="@string/btn_5" app:layout_columnWeight="1" />
        <Button android:id="@+id/button6" style="@style/StyleNumeric.Land" android:text="@string/btn_6" app:layout_columnWeight="1" />
        <Button android:id="@+id/buttonMultiply" style="@style/StyleOperator.Land" android:text="@string/btn_mul" app:layout_columnWeight="1" />

        <Button android:id="@+id/buttonClear" style="@style/StyleOperator.Land" android:text="@string/btn_c" app:layout_columnWeight="1" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backspace"
            style="@style/StyleOperator.Land"
            app:layout_columnWeight="1"
            android:contentDescription="@string/ic_back"
            app:icon="@drawable/ic_backspace"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/text_operator" />
        <Button android:id="@+id/button1" style="@style/StyleNumeric.Land" android:text="@string/btn_1" app:layout_columnWeight="1" />
        <Button android:id="@+id/button2" style="@style/StyleNumeric.Land" android:text="@string/btn_2" app:layout_columnWeight="1" />
        <Button android:id="@+id/button3" style="@style/StyleNumeric.Land" android:text="@string/btn_3" app:layout_columnWeight="1" />
        <Button android:id="@+id/buttonMinus" style="@style/StyleOperator.Land" android:text="@string/btn_sub" app:layout_columnWeight="1" />

        <Button android:id="@+id/buttonPercent" style="@style/StyleNumeric.Land" android:text="@string/btn_percent" app:layout_columnWeight="1" />
        <Button android:id="@+id/buttonPoint" style="@style/StyleNumeric.Land" android:text="@string/btn_dot" app:layout_columnWeight="1" />
        <Button android:id="@+id/button0" style="@style/StyleNumeric.Land" android:text="@string/btn_0" app:layout_columnWeight="1" />
        <Button android:id="@+id/equal" style="@style/StyleEqual.Land" android:text="@string/btn_equal" app:layout_columnWeight="1" app:layout_columnSpan="2" />
        <Button android:id="@+id/buttonPlus" style="@style/StyleOperator.Land" android:text="@string/btn_add" app:layout_columnWeight="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>