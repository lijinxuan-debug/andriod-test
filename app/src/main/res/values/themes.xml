<resources>

    <style name="Theme.MyCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        背景采用白色-->
        <item name="colorPrimary">@color/text_equal</item>
    </style>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="android:insetLeft">6dp</item>
        <item name="android:insetRight">6dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:minHeight">84dp</item>

        <item name="android:minWidth">64dp</item>

        <item name="android:gravity">center</item>

        <item name="elevation">0dp</item>

        <item name="android:stateListAnimator">@null</item>

        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="StyleNumeric" parent="CalcButton">
        <item name="backgroundTint">@color/btn_numeric_bg</item>
        <item name="android:textColor">@color/text_numeric</item>
    </style>

    <style name="StyleOperator" parent="CalcButton">
        <item name="backgroundTint">@color/btn_operator_bg</item>
        <item name="android:textColor">@color/text_operator</item>
    </style>

    <style name="StyleEqual" parent="CalcButton">
        <item name="backgroundTint">@color/btn_equal_bg</item>
        <item name="android:textColor">@color/text_equal</item>
        <item name="cornerRadius">24dp</item>
    </style>
</resources>